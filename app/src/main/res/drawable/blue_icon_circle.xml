<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle Shape Drawable -->
    <item>
        <shape>
            <corners android:radius="250dp"/>
            <solid android:color="@color/blue_300"/>
        </shape>
    </item>

    <!-- place the image inside the circle and make it a circle and center it -->
    <item
        android:drawable="@drawable/img_image21"
        android:gravity="center"
        android:width="40dp"
        android:height="40dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"/>


</layer-list>
