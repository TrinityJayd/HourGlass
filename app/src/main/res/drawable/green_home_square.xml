<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Square Shape Drawable -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/green_square" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Insert image into square -->
    <item
        android:drawable="@drawable/timer"
        android:gravity="center"
        android:width="70dp"
        android:height="70dp"
        android:bottom="45dp"
        android:left="35dp"
        android:right="35dp"
        android:top="35dp" />





</layer-list>