<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/imageTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_16370431" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/ubuntumedium"
            android:text="HourGlass"
            android:textColor="@android:color/white"
            android:textSize="34sp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:src="@drawable/img_image25" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/squaresLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imageTitleLayout"
        android:layout_marginTop="16dp"
        android:padding="25dp">

        <!-- Square 1 -->
        <ImageView
            android:layout_width="10dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:src="@drawable/purplee_home_square"
            android:layout_marginRight="15dp"/>

        <!-- Square 2 -->
        <ImageView
            android:layout_width="10dp"
            android:layout_height="130dp"
            android:src="@drawable/yellow_home_square"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/squaresLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/squaresLayout"
        android:layout_marginTop="16dp"
        android:padding="25dp">

        <!-- Square 1 -->
        <ImageView
            android:layout_width="10dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:src="@drawable/teal_home_square"
            android:layout_marginRight="15dp"/>

        <!-- Square 2 -->
        <ImageView
            android:layout_width="10dp"
            android:layout_height="130dp"
            android:src="@drawable/blue_home_square"
            android:layout_weight="1" />

    </LinearLayout>


</RelativeLayout>