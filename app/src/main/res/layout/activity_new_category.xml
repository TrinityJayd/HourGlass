<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/imageTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/purple_icon_circle"
            android:contentDescription="Add Category"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/ubuntumedium"
            android:text="New Category"
            android:textColor="@android:color/white"
            android:textSize="34sp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:src="@drawable/img_image25"
            android:contentDescription="Home"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="40dp">

        <TextView
            android:id="@+id/categoryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubunturegular"
            android:text="Category Name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:labelFor="@id/editTextCategoryName"/>

        <EditText
            android:id="@+id/editTextCategoryName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:fontFamily="@font/ubunturegular"
            android:inputType="text"
            android:singleLine="false"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/colorPickerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/ubunturegular"
                android:text="Color"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/colorPickerButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/color_picker_circle" />


        </LinearLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/submit_button"
            android:fontFamily="@font/ubuntumedium"
            android:paddingHorizontal="70dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="17sp" />


    </LinearLayout>

</LinearLayout>